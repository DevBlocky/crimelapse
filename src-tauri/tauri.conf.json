{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "crimelapse",
  "version": "0.1.0",
  "identifier": "dev.acool.crimelapse",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "crimelapse",
        "width": 1024,
        "height": 1024
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "resources/bin/mac/ffmpeg",
      "resources/bin/mac/ffprobe",
      "resources/bin/win/ffmpeg.exe",
      "resources/bin/win/ffprobe.exe"
    ]
  }
}
